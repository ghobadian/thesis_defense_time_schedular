<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="seed-data-001" author="koosha" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM users</sqlCheck>
        </preConditions>
        <comment>Insert initial seed data only if users table is empty</comment>
        <sqlFile path="db/changelog/data/data-prod-postgre.sql"
                 relativeToChangelogFile="false"
                 splitStatements="true"
                 stripComments="true"
                 encoding="UTF-8"/>
    </changeSet>

</databaseChangeLog>
